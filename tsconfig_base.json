{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "strictPropertyInitialization": false
  }
}
